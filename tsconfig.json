{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "@jamku/types": [
        "./packages/types/src"
      ],
      "@jamku/utils": [
        "./packages/utils/src"
      ]
    }
  },
  "include": [],
  "references": [
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/utils"
    },
    {
      "path": "./apps/backend"
    },
    {
      "path": "./apps/web"
    }
  ]
}